@using WEB_153503_SHMIDT.Domain.Entities;

<style>
	.clothes-details-container {
		display: flex;
		align-items: center;
	}

	.clothes-image {
		flex: 0 0 auto;
		margin-right: 20px;
	}

	.clothes-info {
		flex: 1 1 auto;
	}
</style>


@if (SelectedCocktail is not null)
{
	<div class="clothes-details-container">
		<div class="clothes-image">
			@if (!string.IsNullOrEmpty(SelectedCocktail.Path))
			{
				<img src="@SelectedCocktail.Path" alt="Clothes Image" />
			}
		</div>
		<div class="clothes-info">
			<h2>@SelectedCocktail.Name</h2>
			<p>@SelectedCocktail.Description</p>
			<p>Price: @SelectedCocktail.Price</p>
		</div>
	</div>
}

@code {
	[Parameter]
	public Cocktail? SelectedCocktail { get; set; }
}